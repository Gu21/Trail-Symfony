                <td>{{ result.id }}</td>
                <td><img src="{{ asset('uploads/photos/' ~ result.pictureResult ) }}" width="100"></td>
                <td>{{ result.titleResult }}</td>
                <td>{{ result.linkResult }}</td>
                <td>{{ result.SubtitleResult}}</td>
                <td>
                    <a href="{{ path('results_show', {'id': result.id}) }}">show</a>
                    <a href="{{ path('results_edit', {'id': result.id}) }}"><i class="fas fa-pencil-alt"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
