{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

<body class="bodyLogin">

    <div class="container mt-5 py-5">
        <div class="row boxLogin mt-5 mb-5">
            <div class="col-sm-6 cardLogin">
                <form method="post">
                    {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                    {% endif %}



                    <h1 class="h3 mb-5  titleLogin">LOGIN</h1>
                    {# <a href="https://www.facebook.com/checkpoint/1501092823525282/?next=https%3A%2F%2Fwww.facebook.com%2FTRAIL-Jambes-Allaire-1504243399878176%2F"
                        class="faceBookLogin mb-5">
                        <i class="fab fa-2x fa-facebook IconLogin"></i>
                    </a> #}

                    <div class="BoxInputLogin">
                        <label for="inputEmail">Email</label>

                        <div class="inputLogin ">
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                                class="form-control" autocomplete="email" required autofocus>
                            <i class="far fa-envelope"></i>
                        </div>



                        <label for="inputPassword">Password</label>

                        <div class="inputLogin ">
                            <input type="password" name="password" id="inputPassword" class="form-control"
                                autocomplete="current-password" required>
                            <i class="fas fa-key"></i>
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html
        
                <!-- <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div> -->
            #}
                    </div>

                    <button class=" btn-lg btnLogin mt-5 mb-5" type="submit">
                        Log in !
                    </button>
                </form>



            </div>
            <div class="col-sm-6 pictureLogin"></div>
        </div>
    </div>


    </div>

</body>
{% endblock %}