{% extends 'baseAdmin.html.twig' %} {% block title %} Commentaire-verification| Trail des jambes Allaire {% endblock %} {%
block body %}


<div class="container">


		<h1>Vérification des commentaires</h1>

		<table id="myTable" class="table  table-Default table-hover table-striped">
			<thead>
				<tr>
					<th>Id</th>
					<th>Titre</th>
					<th>Nom</th>
                    <th>Email</th>
                    <th>Email</th>
                    <th>Commentaire</th>
                    <th>vérification</th>

				</tr>
			</thead> 
			<tbody>
				{% for comment in comments %}
					<tr>
						<td class="subtitle">{{ comment.id }}</td>
                        <td class="subtitle">{{ comment.titleComment }}</td>
                        <td class="subtitle">{{ comment.nameComment }}</td>
                        <td class="subtitle">{{ comment.emailComment }}</td>
                        <td class="subtitle">{{ comment.commentComments }}</td>
                        <td class="subtitle">{{ comment.verified }}</td>
					
	            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    

  	{% if  is_granted('ROLE_ADMIN') %}
		{{ include('comments/_delete_form.html.twig') }}
	{% endif %}
       
</div>
   
{% endblock %}