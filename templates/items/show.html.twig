{% extends 'base.html.twig' %}

{% block title %}Items{% endblock %}

{% block body %}
    <h1>Items</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ item.id }}</td>
            </tr>
            <tr>
                <th>NameItem</th>
                <td>{{ item.nameItem }}</td>
            </tr>
            <tr>
                <th>CommentItem</th>
                <td>{{ item.commentItem }}</td>
            </tr>
            <tr>
                <th>DateItem</th>
                <td>{{ item.dateItem ? item.dateItem|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('items_index') }}">back to list</a>

    <a href="{{ path('items_edit', {'id': item.id}) }}">edit</a>

    {{ include('items/_delete_form.html.twig') }}
