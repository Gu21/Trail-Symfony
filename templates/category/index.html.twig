{% extends 'baseAdmin.html.twig' %}

{% block title %}Admin catégorie{% endblock %}

{% block body %}
    <h1>CATEGORIES</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Categorie</th>
                <th>Modifier</th>
            </tr>
        </thead>
        <tbody>
        {% for category in category %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.nameCategory }}</td>
                <td>
                    <!-- <a href="{{ path('category_show', {'id': category.id}) }}">show</a> -->
                    <a class="edit" href="{{ path('category_edit', {'id': category.id}) }}">ÉDITER</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="backList" href="{{ path('category_new') }}"><span>Créer une nouvelle catégorie</span></a>
{% endblock %}
