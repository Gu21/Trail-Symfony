<body class="Body-parallax  parallaxAnim">

    <section>



        <div class="container BoxForm">
            <div class="row">
                {% for contact in contacts %}
                {% if contact.id == 1 %}
                <div class=" col-sm-12 ">
                    <div class="Title-Form">
                        <h1>CONTACT</h1>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="President">
                        <h2>PRÉSIDENTS:</h2>
                        <P>{{ contact.nameContact }} &nbsp {{ contact.firstNameContact }}</P>
                    </div>

                    <div class="address">
                        <address>
                            <div class="mail">
                                <a href="mailto:{{ contact.emailContact }}">{{ contact.emailContact }}</a>
                            </div>
                            <div class="phone">
                                <a href="tel:{{ contact.phoneContact }}">{{ contact.phoneContact }}</a>
                            </div>
                        </address>
                    </div>
                    {%endif %}
                    {% endfor %}

                    {% for contact in contacts %}
                    {% if contact.id == 2 %}

                    <div class="sub">
                        <p>{{ contact.nameContact }} &nbsp {{ contact.firstNameContact }}</p>
                    </div>

                    <div class="address">
                        <address>
                            <div class="mail">
                                <a href="mailto:{{ contact.emailContact }}">{{ contact.emailContact }}</a>
                            </div>
                            <div class="phone">
                                <a href="tel:{{ contact.phoneContact }}">{{ contact.phoneContact }}</a>
                            </div>
                        </address>
                    </div>
                </div>
                {%endif %}
                {% endfor %}

                <!-- ------------------END---------PRESIDENT----------------------------- -->

                <!-- ------------------TREASURER----------------------------- -->

                {% for contact in contacts %}
                {% if contact.id == 3 %}
                <div class="col-sm-6">
                    <div class="treasurer">
                        <h2>TRÉSORIERS:</h2>
                        <P>{{ contact.nameContact }} &nbsp {{ contact.firstNameContact }}</P>
                    </div>
                    <div class="address">
                        <address>
                            <div class="mail">
                                <a href="mailto:{{ contact.emailContact }}">{{ contact.emailContact }}</a>
                            </div>
                            <div class="phone">
                                <a href="tel:{{ contact.phoneContact }}"">{{ contact.phoneContact }}</a>
                            </div>
                        </address>
                    </div>
                    {%endif %}
                    {% endfor %}

                    {% for contact in contacts %}
                    {% if contact.id == 4 %}

                    <div class="sub">
                        <p>{{ contact.nameContact }} &nbsp {{ contact.firstNameContact }}</p>
                    </div>

                    <div class="address">
                        <address>
                            <div class="mail">
                                <a href="mailto:{{ contact.emailContact }}">{{ contact.emailContact }}</a>
                            </div>
                            <div class="phone">
                                <a href="tel:{{ contact.phoneContact }}">{{ contact.phoneContact }}</a>
                            </div>
                        </address>
                    </div>
                    {%endif %}
                    {% endfor %}
                </div>

            </div>

            <div class="row py-5">

                <div class=" col-sm-6 formboxContact">

                    {{ include('contacts/_form.html.twig') }}


                </div>

                <div class=" col-sm-6 ">

                    <img class="contactEnvelope" src="/img/enveloppeContact.jpg" alt="enveloppe contact">


                </div>



            </div>


            <!-- ------------END------TREASURER----------------------------- -->



        </div>

        
