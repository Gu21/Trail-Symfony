{% extends 'base.html.twig' %}

{% block title %}Pictures index{% endblock %}

{% block body %}
    <h1>Pictures index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>TitlePicture</th>
                <th>SubtitlePicture</th>
                <th>CategoryPicture</th>
                <th>InfoPicture</th>
                <th>LinkPicture</th>
                <th>YearsPicture</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for picture in pictures %}
            <tr>
                <td>{{ picture.id }}</td>
                <td>{{ picture.titlePicture }}</td>
                <td>{{ picture.subtitlePicture }}</td>
                <td>{{ picture.categoryPicture }}</td>
                <td>{{ picture.infoPicture }}</td>
                <td>{{ picture.linkPicture }}</td>
                <td>{{ picture.yearsPicture ? picture.yearsPicture|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('pictures_show', {'id': picture.id}) }}">show</a>
                    <a href="{{ path('pictures_edit', {'id': picture.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('pictures_new') }}">Create new</a>
{% endblock %}
