<form method="post" action="{{ path('items_delete', {'id': item.id}) }}" onsubmit="return confirm('Êtes-vous sûr de bien vouloir supprimer cet élément?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ item.id) }}">
    <button class="btn"><i class="fas fa-trash-alt"></i></button>
</form>
